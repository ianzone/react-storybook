{
  "name": "react-storybook-template",
  "description": "react storybook template",
  "type": "module",
  "files": ["dist"],
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "homepage": "https://github.com/ianzone/react-storybook#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ianzone/react-storybook.git"
  },
  "scripts": {
    "lint": "biome check --fix src --reporter summary",
    "build": "tsc && vite build",
    "dev": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "postinstall": "lefthook install",
    "commit": "git add -A && git-cz",
    "release": "semantic-release -d"
  },
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.2",
    "@storybook/addon-essentials": "^8.4.2",
    "@storybook/addon-interactions": "^8.4.2",
    "@storybook/addon-links": "^8.4.2",
    "@storybook/addon-onboarding": "^8.4.2",
    "@storybook/blocks": "^8.4.2",
    "@storybook/builder-vite": "^8.4.2",
    "@storybook/react": "^8.4.2",
    "@storybook/react-vite": "^8.4.2",
    "@storybook/test": "^8.4.2",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react-swc": "^3.7.1",
    "biome": "^0.3.3",
    "git-cz": "^4.9.0",
    "lefthook": "^1.8.2",
    "semantic-release": "^24.2.0",
    "storybook": "^8.4.2",
    "typescript": "^5.6.3",
    "vite": "^5.4.11",
    "vite-plugin-dts": "^4.3.0",
    "vite-plugin-lib-inject-css": "^2.1.1"
  },
  "engines": {
    "node": ">=22"
  }
}
