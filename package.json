{
  "name": "react-storybook-template",
  "version": "0.0.0",
  "description": "react storybook template",
  "type": "module",
  "files": ["dist"],
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "style": "./dist/style.css",
  "homepage": "https://github.com/ianzone/react-storybook#readme",
  "scripts": {
    "dev": "bunx --bun storybook dev -p 6006",
    "dev:cc": "bunx --bun storybook dev -p 6006 --force-build-preview",
    "build": "bunx --bun vite build",
    "build:storybook": "storybook build --docs --output-dir storybook",
    "build:storybook:bun": "bunx --bun storybook build --docs --output-dir storybook",
    "test": "nr test:ts && nr test:tsx",
    "test:ts": "vitest run --coverage",
    "test:tsx": "concurrently -k \"na storybook dev --port 6006 --ci --quiet\" \"nr test:story\"",
    "test:story": "wait-on http://localhost:6006 && test-storybook --coverage",
    "lint": "biome check --fix src",
    "prepare": "lefthook install",
    "commit": "git add -A && git commit --no-edit",
    "squash": "bun scripts/squash.ts && git commit --no-edit --no-verify",
    "release": "semantic-release -d",
    "chromatic": "chromatic --exit-zero-on-changes"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@chromatic-com/storybook": "^3.2.4",
    "@semantic-release/exec": "^7.0.3",
    "@storybook/addon-a11y": "^8.6.0",
    "@storybook/addon-coverage": "^1.0.5",
    "@storybook/addon-essentials": "^8.6.0",
    "@storybook/addon-interactions": "^8.6.0",
    "@storybook/addon-links": "^8.6.0",
    "@storybook/blocks": "^8.6.0",
    "@storybook/react": "^8.6.0",
    "@storybook/react-vite": "^8.6.0",
    "@storybook/test-runner": "^0.21.3",
    "@testing-library/react": "^16.2.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react-swc": "^3.8.0",
    "@vitest/coverage-v8": "^3.0.7",
    "ajv": "^8.17.1",
    "chromatic": "^11.25.2",
    "concurrently": "^9.1.2",
    "es-proj": "^1.5.0",
    "git-cz": "^4.9.0",
    "happy-dom": "^17.1.8",
    "knip": "^5.45.0",
    "lefthook": "^1.11.0",
    "semantic-release": "^24.2.3",
    "storybook": "^8.6.0",
    "typescript": "^5.7.3",
    "vite": "^6.2.0",
    "vite-plugin-dts": "^4.5.0",
    "vitest": "^3.0.7",
    "wait-on": "^8.0.2"
  },
  "trustedDependencies": ["@biomejs/biome", "@swc/core", "esbuild", "lefthook"]
}
